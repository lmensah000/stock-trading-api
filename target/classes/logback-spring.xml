<?xml version="1.0" encoding="UTF-8"?>
<configuration scan="true" scanPeriod="60 seconds">

    <!-- Hide full file paths in logs -->
    <property name="PROJECT_NAME" value="MoneyTeam" />

    <!-- Console appender with colors -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>
                %magenta([%d{yyyy-MM-dd HH:mm:ss}])
                %highlight(%-5level)
                %cyan(%logger{36}) - %msg%n
            </pattern>
        </encoder>
    </appender>

    <!-- Set logging level -->
    <root level="INFO">
        <appender-ref ref="CONSOLE" />
    </root>
</configuration>